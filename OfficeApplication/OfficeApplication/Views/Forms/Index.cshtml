<style type="text/css">
    .row {
        margin-left: -8px !important;
    }

    .inner {
        display: table-cell;
        vertical-align: middle;
    }

        .inner p {
            text-align: center;
            font-size: 20px;
        }

    .small-box {
        display: table;
        width: 100%;
        min-height: 125px !important;
        transition: transform 250ms; /* RDBJ 12/31/2021 */
        border-radius: 5px; /* RDBJ 12/31/2021 */
    }

        .small-box > .inner {
            padding: 9px;
        }

    /* RDBJ 12/31/2021 */
    .small-box:hover {
        transform: translateY(-2px);
        opacity: 0.9;
    }
    /* End RDBJ 12/31/2021 */

    .dynamic-box {
        margin-top: -12px;
        padding-left: 5px;
        padding-right: 3px;
        /*margin-right: -22px !important;*/
    }

    .hvrbox,
    .hvrbox * {
        box-sizing: border-box;
    }

    .hvrbox {
        position: relative;
        overflow: hidden;
        max-width: 100%;
        height: auto;
    }
        /*display: inline-block;*/
        .hvrbox img {
            max-width: 100%;
        }

        .hvrbox .hvrbox-layer_bottom {
            display: block;
        }

        .hvrbox .hvrbox-layer_top {
            opacity: 0;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            color: #fff;
            padding: 15px;
            -moz-transition: all 0.4s ease-in-out 0s;
            -webkit-transition: all 0.4s ease-in-out 0s;
            -ms-transition: all 0.4s ease-in-out 0s;
            transition: all 0.4s ease-in-out 0s;
        }

        .hvrbox:hover .hvrbox-layer_top,
        .hvrbox.active .hvrbox-layer_top {
            opacity: 1;
        }

        .hvrbox .hvrbox-text {
            text-align: center;
            font-size: 18px;
            display: inline-block;
            position: absolute;
            top: 50%;
            left: 50%;
            -moz-transform: translate(-50%, -50%);
            -webkit-transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
        }

        .hvrbox .hvrbox-text_mobile {
            font-size: 15px;
            border-top: 1px solid rgb(179, 179, 179); /* for old browsers */
            border-top: 1px solid rgba(179, 179, 179, 0.7);
            margin-top: 5px;
            padding-top: 2px;
            display: none;
        }

        .hvrbox.active .hvrbox-text_mobile {
            display: block;
        }

    .hvrbox-text {
        width: 100%;
        padding: 20px;
    }
</style>
