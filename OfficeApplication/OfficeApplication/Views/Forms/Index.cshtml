    <div class="row divFormsList" id="divFormsList">
        @if (ViewBag.FormList != null)
        {
            var classString = "bg-red";
            var titleString = "";
            string strType = "";
            string strTitle = "";
            foreach (var item in ViewBag.FormList)
            {
                if (item.Code == "RAF" ||  item.Code == "DER"
                     || item.Code == "DPR" || item.Code == "DCR" || item.Code == "ARR")//item.Code == "IAF" || || item.Code == "GIR"|| item.Code == "SIR" item.Code == "SMR" ||
                {
                    continue;
                }
                strType = item.Category;
                if (string.IsNullOrWhiteSpace(strType))
                {
                    strType = "";
                }
                switch (strType.ToUpper())
                {
                    case "AUDITANDINSPECTION":
                        classString = "bg-red";
                        break;
                    case "CHECKLISTS":
                        classString = "bg-purple";
                        break;
                    case "CREWING":
                        classString = "bg-green";
                        break;
                    case "FINANCE":
                        classString = "bg-blue";
                        break;
                    case "HEALTHANDSAFTEY":
                        classString = "bg-fuchsia";
                        break;
                    case "INTERNAL":
                        classString = "bg-maroon";
                        break;
                    case "MISCELLANEOUS":
                        classString = "bg-orange";
                        break;
                    case "OPERATIONS":
                        classString = "bg-light-blue";
                        break;
                    case "PURCHASING":
                        classString = "bg-fuchsia";
                        break;
                    case "SECURITY":
                        classString = "bg-aqua";
                        break;
                    case "TECHNICAL":
                        classString = "bg-teal";
                        break;
                    default:
                        break;
                }
                strTitle = item.Title;
                titleString = "";
                if (item.Code == "RWH" || item.Code == "RWHS")
                {
                    <div class="col-md-3 col-sm-6 col-xs-12 dynamic-box">
                        <a href="#" onclick="openFormDocument(@item.TemplatePath,'@item.Code')" style="cursor:pointer;">
                            <div class="small-box @classString hvrbox" id="boxIssue">
                                <div class="inner">
                                    <p>@item.Title @titleString<span style="display:none">@item.Code</span></p>
                                    <div class="hvrbox-layer_top">
                                        <div class="hvrbox-text">
                                            <div class="bottom pull-left" style="text-align:left;">

                                                @if (item.IssueDate != null)
                                                {
                                                    <label style="font-size: 15px;">Issue No: @item.Issue - @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.IssueDate))</label><br />
                                                }
                                                else
                                                {
                                                    <label style="font-size: 15px;">Issue No: @item.Issue - @item.IssueDate</label><br />
                                                }
                                                @if (item.AmendmentDate != null)
                                                {
                                                    <label style="font-size: 15px;">Amendment No: @item.Amendment - @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.AmendmentDate))</label>
                                                }
                                                else
                                                {
                                                    <label style="font-size: 15px;">Amendment No: @item.Amendment - @item.AmendmentDate</label>
                                                }

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
                else
                {
                    <div class="col-md-3 col-sm-6 col-xs-12 dynamic-box">
                        <a href="#" onclick="openFormDocument(@item.TemplatePath)" style="cursor:pointer;">
                            <div class="small-box @classString hvrbox" id="boxIssue">
                                <div class="inner">
                                    <p>@item.Title @titleString<span style="display:none">@item.Code</span></p>
                                    <div class="hvrbox-layer_top">
                                        <div class="hvrbox-text">
                                            <div class="bottom pull-left" style="text-align:left;">

                                                @if (item.IssueDate != null)
                                                {
                                                    <label style="font-size: 15px;">Issue No: @item.Issue - @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.IssueDate))</label><br />
                                                }
                                                else
                                                {
                                                    <label style="font-size: 15px;">Issue No: @item.Issue - @item.IssueDate</label><br />
                                                }
                                                @if (item.AmendmentDate != null)
                                                {
                                                    <label style="font-size: 15px;">Amendment No: @item.Amendment - @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.AmendmentDate))</label>
                                                }
                                                else
