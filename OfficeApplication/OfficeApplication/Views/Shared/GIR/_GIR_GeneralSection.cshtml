                        <input type="text" class="col-md-12 form-control GIRData" id="Inspector" name="Inspector" value="@OfficeApplication.BLL.Helpers.SessionManager.Username" readonly />
                        <span class="form-control-feedback">
                            @*<label class="text-danger">*</label>*@ @*RDBJ 10/08/2021 Commented*@
                        </span>
                    </div>
                </td>
                <td width="10%"><p class="m-5">Date:</p></td>
                <td width="40%">
                    <div class="form-group has-feedback">
                        <input type="text" id="Date" class="col-md-12 form-control GIRData" name="Date" />
