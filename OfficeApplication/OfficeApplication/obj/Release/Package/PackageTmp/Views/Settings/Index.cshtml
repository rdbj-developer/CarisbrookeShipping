@{
    ViewBag.Title = "Settings";
}
<style>
    /* RDBJ 02/24/2022 */
    div.row {
        margin-right: 0px !important;
    }
    /* End RDBJ 02/24/2022 */
</style>
<script type="text/javascript" src="~/Scripts/jquery/jquery.validate.min.js"></script>
<script>
    var RootUrl = '@Url.Content("~/")';
    var _Username = '@OfficeApplication.BLL.Helpers.SessionManager.Username';
</script>
<script src="~/Scripts/Custom/Settings.js?v=02242022"></script>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Main Sync Service</h3>
                </div>
                <div class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Time Interval : </label>
                            <div class="col-sm-9">
                                <select class="form-control updateData" id="mainSyncServiceVersionTimeInterval" style="width: 150px; cursor:pointer;">
                                    <option value="8">8 Mins</option>
                                    <option value="15">15 Mins</option>
                                    <option value="30">30 Mins</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Use Server Time Interval : </label>
                            <div class="col-sm-9" style="padding-top: 7px;">
                                <input type="checkbox" id="mainSyncServiceUseServerTimeInterval" class="updateData" style="cursor:pointer;" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Updated By : </label>
                            <div class="col-sm-9">
                                <label id="mainSyncServiceUpdatedBy" class="control-label" style="font-weight: normal !important;"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">Updated On : </label>
                            <div class="col-sm-9">
                                <label id="mainSyncServiceUpdatedDate" class="control-label" style="font-weight: normal !important;"></label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label"></label>
                            <div class="col-sm-9">
                                <button id="btnDownloadMainSyncService" type="button" class="btn btn-info" data-toggle="tooltip" data-original-title="Main Sync Servie" style="float: right;">
                                    <i style="padding-left:2px" class="fa fa-download"></i>&nbsp; Download (Version <span id="mainSyncServiceVersion"></span>)
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>