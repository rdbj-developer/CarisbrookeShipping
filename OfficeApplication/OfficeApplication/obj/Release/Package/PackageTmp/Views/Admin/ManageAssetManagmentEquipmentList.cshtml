                            <div class="page-header-space">
                                <div class="text-center">
                                    <h3>Asset Management - IT & OT Equipment</h3>
                                </div>
                                <div class="text-right">
                                    <h4 id="h4ShipName">SHIP:</h4>
                                </div>
                            </div>
                        </td>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </form>
</section>
