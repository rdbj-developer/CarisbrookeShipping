@{
    ViewBag.Title = "Users";
    Layout = null;
}
<script src="~/Scripts/notify.min.js"></script>
<script type="text/javascript">
    var RootUrl = '@Url.Content("~/")';
    var msg = "@ViewBag.UserAdded"
    if (msg == "Success")
        $.notify("User Added Successfully", "success");
    if (msg == "Error")
        $.notify("Error while Adding user", "error");
</script>
<script src="~/Scripts/Custom/Users.js?v1.1"></script>

<div class="row">
    <div class="col-md-12">
        <button id="btnAddUser" class="btn btn-primary">Add New User</button>
    </div>
</div>
<br />
<div class="row" id="AddUserForm" style="display:none;">
    <div class="col-md-8">
        <div class="box box-info">
            <form method="post" action="@Url.Action("AddUser", "Admin")" class="form-horizontal">
                <div class="box-body">
                    <div class="form-group">
                        <label for="Email" class="col-sm-2 control-label">Email</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="txtEmail" name="Email" placeholder="Email" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Password" class="col-sm-2 control-label">Password</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="txtPassword" name="Password" placeholder="Password" required>
                        </div>
                    </div>
                    <div class="form-group hidden">
                        <label for="UserRole" class="col-sm-2 control-label">User Role</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="UserRole">
                                <option value="1">sa</option>
                                <option value="2">repoter</option>
                                <option value="3">admin</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="UserName" class="col-sm-2 control-label">User Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="txtUserName" name="UserName" placeholder="UserName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="UserGroup" class="col-sm-2 control-label">User Group</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="UserGroup">
                                @if (ViewBag.UserGroups != null)
                                {
                                    foreach (var item in ViewBag.UserGroups)
                                    {
                                        <option value="@item.UserGroupId">@item.UserGroupName</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-info">Submit</button>
                    <button type="button" class="btn btn-default" id="btnCancel">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
<br />
<div class="row" id="UsersList">
    <div class="col-md-12">
        <div id="UsersGrid"></div>
    </div>
</div>
