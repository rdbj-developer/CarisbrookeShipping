<div class="Section breakDiv clsSection">
    <div class="SectionHead">
        <u>Section 5T</u> - Hull, Including Paintwork
    </div>
    <div class="SectionContent">
        <table class="table tblSection">
            <tr>
                <td width="10%" class="v-al-m text-center">
                    No.
                </td>
                <td width="40%" class="v-al-m text-center">Item</td>
                <td width="50%" class="v-al-m text-center">Comment</td>
            </tr>
            <tr class="addDeficiencies">
                <td width="10%" class="v-al-m text-center clsItemNo">
                    1
                </td>
                <td width="40%" class="v-al-m">
                    <p class="m-0 m-l-5">Boot top</p>
                </td>
                <td width="50%" class="clsDeficiencies">
                    <textarea class="form-control col-md-12 GIRData" name="BoottopComment" rows="1">@Model.BoottopComment</textarea>
                </td>
            </tr>
            <tr class="addDeficiencies">
                <td width="10%" class="v-al-m text-center clsItemNo">
                    2
                </td>
                <td width="40%" class="v-al-m">
                    <p class="m-0 m-l-5">Topsides</p>
                </td>
                <td width="50%" class="clsDeficiencies">
                    <textarea class="form-control col-md-12 GIRData" name="TopsidesComment" rows="1">@Model.TopsidesComment</textarea>
                </td>
            </tr>
            <tr class="addDeficiencies">
                <td width="10%" class="v-al-m text-center clsItemNo">
                    3
                </td>
                <td width="40%" class="v-al-m">
                    <p class="m-0 m-l-5">Anti-fouling</p>
                </td>
                <td width="50%" class="clsDeficiencies">
                    <textarea class="form-control col-md-12 GIRData" name="AntifoulingComment" rows="1">@Model.AntifoulingComment</textarea>
                </td>
            </tr>
            <tr class="addDeficiencies">
                <td width="10%" class="v-al-m text-center clsItemNo">
                    4
                </td>
                <td width="40%" class="v-al-m">
                    <p class="m-0 m-l-5">Draft and plimsoll marks etc.</p>
                </td>
                <td width="50%" class="clsDeficiencies">
                    <textarea class="form-control col-md-12 GIRData" name="DraftandplimsollComment" rows="1">@Model.DraftandplimsollComment</textarea>
                </td>
            </tr>
            <tr class="addDeficiencies">
                <td width="10%" class="v-al-m text-center clsItemNo">
                    5
                </td>
                <td width="40%" class="v-al-m">
                    <p class="m-0 m-l-5">Fouling</p>
                </td>
                <td width="50%" class="clsDeficiencies">
                    <textarea class="form-control col-md-12 GIRData" name="FoulingComment" rows="1">@Model.FoulingComment</textarea>
                </td>
            </tr>
            <tr class="addDeficiencies">
                <td width="10%" class="v-al-m text-center clsItemNo">
                    6
                </td>
                <td width="40%" class="v-al-m">
                    <p class="m-0 m-l-5">Mechanical damage</p>
                </td>
                <td width="50%" class="clsDeficiencies">
                    <textarea class="form-control col-md-12 GIRData" name="MechanicalComment" rows="1">@Model.MechanicalComment</textarea>
                </td>
            </tr>
            <tr>
                <td colspan="4" width="100%" class="v-al-m">
                    Comments:
                </td>
            </tr>
            <tr class="addDeficiencies">
                <td colspan="3" width="100%" class="clsDeficiencies">
                    <textarea class="form-control col-md-12 GIRData" name="HullComment" rows="2">@Model.HullComment</textarea>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="SectionComplete">
    <div class="checkbox">
        <label>Section Complete?</label>
        @* RDBJ 10/19/2021 Set Name, Value and wrapped in if*@
        @if (Model.IsHullSectionComplete == true)
        {
            <input type="checkbox" class="GIRData" name="IsHullSectionComplete" value="true" style="margin-left:20px;" checked />
        }
        else
        {
            <input type="checkbox" class="GIRData" name="IsHullSectionComplete" value="false" style="margin-left:20px;" />
        }
    </div>
</div>
