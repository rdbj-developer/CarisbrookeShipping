<div class="Section breakDivPage clsSection">
    <div class="SectionHead">
        <u>Section 6</u> - Summary and Recommendations
    </div>
    <div class="SectionContent">
        <table class="table tblSection">
            <tr class="addDeficiencies">
                <td class="clsDeficiencies">
                    <textarea class="form-control col-md-12 GIRData" name="SummaryComment" rows="2">@Model.SummaryComment</textarea>
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="SectionComplete">
    <div class="checkbox">
        <label>Section Complete?</label>
        @* RDBJ 10/19/2021 Set Name, Value and wrapped in if*@
        @if (Model.IsSummarySectionComplete == true)
        {
            <input type="checkbox" class="GIRData" name="IsSummarySectionComplete" value="true" style="margin-left:20px;" checked />
        }
        else
        {
            <input type="checkbox" class="GIRData" name="IsSummarySectionComplete" value="false" style="margin-left:20px;" />
        }
    </div>
</div>
