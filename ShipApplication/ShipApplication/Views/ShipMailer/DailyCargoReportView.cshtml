@using ShipApplication.BLL.Modals;
@using ShipApplication.BLL.Helpers;
@{
    Layout = null;
    DailyCargoReportModal modal = ViewBag.DailyCargoReport != null ? (DailyCargoReportModal)ViewBag.DailyCargoReport : null;
}
<head>
    <style type="text/css">
        .mail {
            margin: 0px;
            margin-bottom: 2px;
        }

        .mailHeading {
            margin-top: 10px;
        }
    </style>
</head>
@if (modal != null)
{
    <p class="mail"><b>Ship Code :</b> @modal.ShipCode</p>
    <p class="mail"><b>Ship Name :</b> @modal.ShipName</p>
    <p class="mail"><b>Report created on :</b> @ShipApplication.BLL.Helpers.Utility.GetCurrentDateString()</p>
    <p class="mail"><b>Report submitted by :</b> @modal.CreatedBy</p>
    <p class="mail"><b>Voyage no :</b> @modal.VoyageNo</p>
    <p class="mail"><b>Port Name :</b> @modal.PortName</p>

    <p class="mail mailHeading"><b>Cargo</b></p>
    <p class="mail">Number of gangs employed (if applicable) : @modal.NoOfGangs t</p>
    <p class="mail">Number of ships cranes in use (if applicable) : @modal.NoOfShips t</p>
    <p class="mail">Quantity of cargo loaded/discharged since commencement of cargo operations / last report : @modal.QuantityOfCargoLoaded t</p>
    <p class="mail">Total cargo loaded/discharged (this port only) : @modal.TotalCargoLoaded t</p>
    <p class="mail">Cargo remaining to be loaded/discharged (this port only) : @modal.CargoRemaining t</p>

    <p class="mail mailHeading"><b>Bunker ROB</b></p>
    <p class="mail">Fuel oil : @modal.FuelOil t</p>
    <p class="mail">Diesel oil : @modal.DieselOil t</p>
    <p class="mail">Low sulphur fuel oil : @modal.SulphurFuelOil t</p>
    <p class="mail">Low sulphur diesel oil : @modal.SulphurDieselOil t</p>
    <p class="mail">Sludge : @modal.Sludge m<sup>3</sup></p>
    <p class="mail">Dirty oil : @modal.DirtyOil m<sup>3</sup></p>

    <p class="mail mailHeading"><b>Departure</b></p>
    <p class="mail">ETC/D date : @Utility.DateToString(modal.ETCDate)</p>
    <p class="mail">ETC/D time : @modal.ETCTime</p>
    <p class="mail">Next port : @modal.NextPort</p>

    <p class="mail"><b>Remarks</b></p>
    <p class="mail">@modal.Remarks</p>
}
